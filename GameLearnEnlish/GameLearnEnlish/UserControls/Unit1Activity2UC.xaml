<UserControl x:Class="GameLearnEnlish.UserControls.Unit1Activity2UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLearnEnlish.UserControls"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontStretch" Value="Expanded"/>
            <Setter Property="FontSize" Value="19"/>
        </Style>

    </UserControl.Resources>
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblQuestion1" Grid.Column="0" Grid.Row="0" Content="1." Style="{StaticResource LabelStyle}" MouseEnter="Question1_MouseEnter"  MouseLeave="Question1_MouseLeave"  Cursor="Hand"/>
        <Label x:Name="lblQuestion2" Grid.Column="0" Grid.Row="1" Content="2." Style="{StaticResource LabelStyle}" MouseEnter="Question2_MouseEnter"  MouseLeave="Question2_MouseLeave" Cursor="Hand"/>
        <Label x:Name="lblQuestion3" Grid.Column="0" Grid.Row="2" Content="3." Style="{StaticResource LabelStyle}" MouseEnter="Question3_MouseEnter"  MouseLeave="Question3_MouseLeave"  Cursor="Hand"/>


        <Image x:Name="imgGuyaudio1" Source="..\media\textures\matching\guyaudio.png" Stretch="Uniform" Grid.Row="0" Grid.Column="1" Margin="5" Cursor="Hand" MouseEnter="Question1_MouseEnter"  MouseLeave="Question1_MouseLeave" MouseDown="Question1_MouseDown">
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgGuyaudio2" Source="..\media\textures\matching\guyaudio.png" Stretch="Uniform" Grid.Row="1" Grid.Column="1" Margin="5" Cursor="Hand" MouseEnter="Question2_MouseEnter"  MouseLeave="Question2_MouseLeave">
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgGuyaudio3" Source="..\media\textures\matching\guyaudio.png" Stretch="Uniform" Grid.Row="2" Grid.Column="1" Margin="5" Cursor="Hand" MouseEnter="Question3_MouseEnter"  MouseLeave="Question3_MouseLeave">
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>

        <Image x:Name="imgImg1" Source="..\media\textures\matching\act1\img1.png" Stretch="Uniform" Grid.Row="0" Grid.Column="5" Margin="6" >
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgImg2" Source="..\media\textures\matching\act1\img2.png" Stretch="Uniform" Grid.Row="1" Grid.Column="5" Margin="6">
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgImg3" Source="..\media\textures\matching\act1\img3.png" Stretch="Uniform" Grid.Row="2" Grid.Column="5" Margin="6">
            <Image.Effect>
                <DropShadowEffect Direction="-40" Color="#FFB6C2CB" ShadowDepth="5" BlurRadius="10"/>
            </Image.Effect>
        </Image>


        <Image x:Name="imgNode1" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="0" Grid.Column="2" Cursor="Hand" MouseEnter="Question1_MouseEnter"  MouseLeave="Question1_MouseLeave" />
        <Image x:Name="imgNode2" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="1" Grid.Column="2" Cursor="Hand" MouseEnter="Question2_MouseEnter"  MouseLeave="Question2_MouseLeave"/>
        <Image x:Name="imgNode3" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="2" Grid.Column="2 " Cursor="Hand" MouseEnter="Question3_MouseEnter"  MouseLeave="Question3_MouseLeave"/>

        <Image x:Name="imgNode1a" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="0" Grid.Column="4" />
        <Image x:Name="imgNode2a" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="1" Grid.Column="4" />
        <Image x:Name="imgNode3a" Source="..\media\textures\matching\node.png" Stretch="Uniform" Grid.Row="2" Grid.Column="4 "/>

    </Grid>
</UserControl>
